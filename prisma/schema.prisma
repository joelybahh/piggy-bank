generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model users {
  id         String    @id @default(cuid())
  username   String    @unique
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  account_id String?   @unique
  account    accounts? @relation(fields: [account_id], references: [id])
}

model accounts {
  id         String   @id @default(cuid())
  name       String
  balance    Float
  awarded    Float
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  passcode   String?
  goals      goals[]
  user       users?
}

model goals {
  id         String   @id @default(cuid())
  title      String
  completed  Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  account_id String
  amount     Float
  account    accounts @relation(fields: [account_id], references: [id])
}
